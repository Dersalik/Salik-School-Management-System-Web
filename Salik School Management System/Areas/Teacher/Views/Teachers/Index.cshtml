@model IEnumerable<Teacher>
@{
	ViewData["Title"]="All Teachers";
}
<partial name="_Notification" />


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-5">
			<h2 class="text-primary">Teachers List</h2>
		</div> 
	     <div class="col-6 text-end">
			 <a  asp-controller="Teacher" asp-action="Create"  class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> add new Teacher
			 </a>
		 </div>
    </div>
	<br />
	<br />



	<table class="table table-bordered table-striped" width="100%">

	<thed>
		<tr>
		
			<th>Teacher Name</th>
             
			<th>Topics</th>
			

		</tr>


	</thed>

	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
			
				<td width="50%">
					@obj.Name
				</td>
			
				<td><a asp-controller="Teachers" asp-action="AllTopics"  asp-route-Id="@obj.Id">Topics</a></td>

				
			
			</tr>
		}


	</tbody>



</table>

</div>