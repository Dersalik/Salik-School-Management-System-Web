@model IEnumerable<Student>
@{
	ViewData["Title"]="All students";
}

<partial name="_Notification" />

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-5">
			<h2 class="text-primary">Students List</h2>
		</div> 
	     <div class="col-6 text-end">
			 <a  asp-controller="Student" asp-action="Create"  class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> add new Student
			 </a>
		 </div>
    </div>
	<br />
	<br />



	<table class="table table-bordered table-striped" width="100%">

	<thed>
		<tr>
			<th></th>
			<th>Student full name</th>

			<th>age</th>
			<th>gender</th>
			<th>Birthdate</th>
			<th>Stage</th>
			<th>Topics</th>
			<th></th>
		</tr>


	</thed>

	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
					</div>
				</td>
				<td width="50%">
					@obj.Name
				</td>
				<td width="30%">
					@obj.age
				</td>
					@{
						string genderToDisplay;
						if (obj.gender == false)
							genderToDisplay = "male";
						else genderToDisplay = "female";
					}
				<td width="30%">
						@genderToDisplay
				</td>
				<td>
				 @obj.birthday.ToShortDateString()
				</td>
				<td>
				  @obj?.stage?.StageNumber
				</td>
				<td><a asp-controller="Student" asp-action="AllTopics" asp-route-id="@obj.Id">Topics</a></td>

				
				<td>
			<a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                </td>
			</tr>
		}


	</tbody>



</table>

</div>