@model IEnumerable<Stage>
@{
	ViewData["Title"]="All Stages";
}
<partial name="_Notification" />


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-5">
			<h2 class="text-primary">Stages List</h2>
		</div> 
    </div>
	<br />
	<br />



	<table class="table table-bordered table-striped" width="100%">

	<thed>
		<tr>
			
			<th>Stage Name</th>
             
			<th>Number of Students</th>
		
			<th>Number of topics</th>
		</tr>


	</thed>

	<tbody>
		@foreach(var obj in Model)
		{
			<tr>	
				<td width="50%">
					@obj.StageNumber
				</td>
				<td width="30%">
					<a asp-action="AllStudents" asp-controller="Stage" asp-route-stNum="@obj.StageNumber">@obj.students?.Count</a>
				</td>
				<td width="30%">
					<a asp-action="AllTopics" asp-controller="Stage" asp-route-StNum="@obj.StageNumber">@obj.topicList?.Count</a>
				</td>

				
				
			</tr>
		}


	</tbody>



</table>

</div>