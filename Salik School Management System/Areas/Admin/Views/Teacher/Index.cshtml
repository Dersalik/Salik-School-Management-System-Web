@model IEnumerable<Teacher>
@{
	ViewData["Title"]="All Teachers";
}
<partial name="_Notification" />


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-5">
			<h2 class="text-primary">Teachers List</h2>
		</div> 
	     <div class="col-6 text-end">
			 <a  asp-controller="Teacher" asp-action="Create"  class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> add new Teacher
			 </a>
		 </div>
    </div>
	<br />
	<br />



	<table class="table table-bordered table-striped" width="100%">

	<thed>
		<tr>
			<th></th>
			<th>Teacher Name</th>
             
			<th>Number of topics currently teaching</th>
			
			<th>Topics</th>
		    <th>Students</th>
			<th></th>
		</tr>


	</thed>

	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Teacher" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
					</div>
				</td>
				<td width="50%">
					@obj.Name
				</td>
				<td width="30%">
					@obj.topics?.Count
				
				
				<td><a asp-controller="Teacher" asp-action="AllTopics" asp-route-Id="@obj.Id">Topics</a></td>

				
				<td>
			<a asp-controller="Teacher" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                </td>
			</tr>
		}


	</tbody>



</table>

</div>