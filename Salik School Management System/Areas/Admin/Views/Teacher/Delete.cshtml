@model Teacher 


<form method="post" asp-controller="Teacher" asp-action="Delete">

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Teacher</h2>
			<hr />
		</div>
		<div class="mb-3">
			
			<label asp-for="Name">Name</label>
			<p>@Model.Name</p>
		</div>
		@Html.HiddenFor(k=>Model.Id)
		

		<button type="submit" class="btn btn-primary"  asp-route-id="@Model.Id"  style="width:150px">Delete</button>
		<a  asp-controller="Teacher" asp-action="Index" class="btn btn-secondary" style="width:150px">back to list</a>
    </div>

</form>